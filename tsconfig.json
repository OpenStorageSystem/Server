{
    "compilerOptions": {
      "watch": true,
      "module": "commonjs",
      "target": "ESNext",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./build",
      "rootDir": "src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": ["./src/**/*", "./src/ui/**/*"],
    "exclude": ["node_modules"]
  }